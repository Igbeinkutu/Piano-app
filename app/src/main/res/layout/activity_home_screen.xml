<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emerson.myapplication.home_screen"
    android:background="@drawable/images9">

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Lessons"
        android:id="@+id/lesson"
        android:clickable="true"
        android:onClick="lesson_intent"
        android:background="@drawable/brown_image1"
        android:textSize="25sp"
        android:textColor="#ecd254"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/games"
        android:layout_alignStart="@+id/games" />

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Free Style"
        android:id="@+id/free_style"
        android:layout_above="@+id/games"
        android:layout_alignLeft="@+id/lesson"
        android:layout_alignStart="@+id/lesson"
        android:clickable="true"
        android:onClick="free_Style_intent"
        android:textSize="25sp"
        android:textColor="#ecd254"
        android:background="@drawable/brown_image1"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:typeface="sans"
        android:id="@+id/button" />

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Songs"
        android:id="@+id/songs"
        android:clickable="true"
        android:onClick="songs_intent"
        android:background="@drawable/brown_image1"
        android:textColor="#ecd254"
        android:textSize="25sp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/games"
        android:layout_alignStart="@+id/games"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Games"
        android:id="@+id/games"
        android:layout_above="@+id/scores"
        android:layout_centerHorizontal="true"
        android:onClick="games_intent"
        android:background="@drawable/brown_image1"
        android:textColor="#ecd254"
        android:textSize="25sp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="Scores"
        android:id="@+id/scores"
        android:layout_above="@+id/songs"
        android:layout_centerHorizontal="true"
        android:onClick="scores_intent"
        android:background="@drawable/brown_image1"
        android:textColor="#ecd254"
        android:textSize="25sp"
        android:layout_marginTop="10dp" />


</RelativeLayout>
